{
  "name": "mediatoolsjs",
  "version": "1.0.0",
  "description": "A desktop application framework for integrating media processing tools",
  "main": "dist/main/src/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "cross-env VITE_DEV_SERVER_URL=http://localhost:5178 vite",
    "dev:electron": "wait-on tcp:5178 && tsc -p tsconfig.main.json && cross-env NODE_ENV=development electron . --trace-warnings --enable-logging",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "build": "npm run build:main && npm run build:renderer",
    "package": "npm run build && electron-builder",
    "package:dir": "npm run build && electron-builder --dir",
    "package:win": "npm run build && electron-builder --win --config electron-builder.json",
    "update-icon": "node convert-icon.js",
    "start": "electron .",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx,scss}\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@ant-design/icons-vue": "^7.0.1",
    "@electron-toolkit/preload": "^3.0.1",
    "@electron/remote": "^2.1.2",
    "@vicons/antd": "^0.12.0",
    "@vueuse/core": "^10.11.1",
    "ant-design-vue": "^4.2.6",
    "chokidar": "^3.5.3",
    "electron-store": "^8.1.0",
    "extract-zip": "^2.0.1",
    "lowdb": "^1.0.0",
    "node-fetch": "^2.7.0",
    "pinia": "^2.3.1",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0",
    "win32-api": "^26.1.1"
  },
  "devDependencies": {
    "@types/lowdb": "^1.0.15",
    "@types/node": "^20.0.0",
    "@types/node-fetch": "^2.6.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-vue": "^5.2.1",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^34.1.1",
    "electron-builder": "^25.1.8",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-vue": "^9.0.0",
    "jimp": "^1.6.0",
    "png-to-ico": "^2.1.8",
    "prettier": "^3.0.0",
    "sass": "^1.0.0",
    "sharp": "^0.33.5",
    "typescript": "^5.7.3",
    "vite": "^6.1.0",
    "wait-on": "^7.2.0"
  }
}
